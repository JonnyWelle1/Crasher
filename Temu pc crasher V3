@echo off
set "starttime=%time%"
:loop
start "" cmd
rem Pr√ºfe, ob 30 Sekunden vergangen sind
for /f "tokens=1-4 delims=:.," %%a in ("%time%") do (
  set /a sec=%%a*3600+%%b*60+%%c
)
for /f "tokens=1-4 delims=:.," %%a in ("%starttime%") do (
  set /a startsec=%%a*3600+%%b*60+%%c
)
set /a elapsed=%sec%-%startsec%
if %elapsed% geq 30 goto :done
goto loop

:done
echo Schleife beendet nach 30 Sekunden.
pause

Copy the scipt and do it in a .bat
